<h4 class="text-danger">Transfer money from one bank account to another</h4>

@*@using (Ajax.BeginForm("Transfer", null, new AjaxOptions { UpdateTargetId = "information" }, new { htmlAttributes = new { @class = "form-inline" } }))*@
@using (Html.BeginForm(new { htmlAttributes = new { @class = "form-inline" } }))
{
    @Html.AntiForgeryToken()
    <div>
        <div class="form-group row">
            <label for="from" class="col-md-1 col-form-label font-weight-bolder">From:</label>
            <input type="text" class="form-control col-md-2" name="firstId" id="from" placeholder="Bank account Id" />
        </div>
        <div class="form-group row">
            <label for="to" class="col-md-1 col-form-label font-weight-bolder">To:</label>
            <input type="text" class="form-control col-md-2" name="secondId" id="to" placeholder="Bank account Id" />
        </div>
        <div class="form-group row text">
            <label for="money" class="col-md-1 col-form-label font-weight-bolder">Amount:</label>
            <input type="text" class="form-control col-md-2" name="amount" id="money" placeholder="Amount of money" />
        </div>
        <div class="form-group row text">
            <div class="col-md-1"></div>
            <input type="submit" value="Transfer" class="btn btn-primary btn-lg" />
        </div>
    </div>
}

